<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FinalProject3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/athenGray</item>
        <item name="colorPrimaryVariant">@color/dodgeBlue</item>
        <item name="colorOnPrimary">@color/athenGray</item>

        <item name="colorSecondary">@color/dodgeBlue</item>
        <item name="colorSecondaryVariant">@color/dodgeBlue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:background">@color/athenGray</item>
        <item name="android:textColor">@color/mineShaft</item>
    </style>

    <style name="HeaderCalculatorStyle" parent="Theme.FinalProject3">
        <item name="android:background">@color/dodgeBlue</item>
    </style>

    <style name="ButtonBackspace" parent="Theme.FinalProject3">
        <item name="android:background">@color/dodgeBlue</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NumberButton" parent="Theme.FinalProject3">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/mineShaft</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OperationButton" parent="Theme.FinalProject3">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dodgeBlue</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>