<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject3" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/mineShaft</item>
        <item name="colorPrimaryVariant">@color/turqoise</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/turqoise</item>
        <item name="colorSecondaryVariant">@color/turqoise</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="android:background">@color/mineShaft</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderCalculatorStyle" parent="Theme.FinalProject3">
        <item name="android:background">@color/mineShaft</item>
    </style>

    <style name="ButtonBackspace" parent="Theme.FinalProject3">
        <item name="android:background">@color/mineShaft</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="NumberButton" parent="Theme.FinalProject3">
        <item name="backgroundTint">@color/mineShaft</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="OperationButton" parent="Theme.FinalProject3">
        <item name="backgroundTint">@color/mineShaft</item>
        <item name="android:textColor">@color/turqoise</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

</resources>